<Window x:Class="TellerApp.Wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pengaturan Display" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="140"/>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <TextBlock Text="Running Text" Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"/>
    <TextBox x:Name="RunningTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,8" Width="520"/>

    <TextBlock Text="Video" Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center"/>
    <TextBox x:Name="VideoPathBox" Grid.Row="1" Grid.Column="1" Margin="0,0,8,8" Width="440"/>
    <Button Content="Browse..." Grid.Row="1" Grid.Column="2" Margin="0,0,0,8" Padding="12,4" Click="Browse_Click"/>

    <CheckBox x:Name="ShowVideoCheck" Content="Tampilkan video" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"/>

    <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Simpan" Width="100" Margin="0,12,8,0" Click="Save_Click"/>
      <Button Content="Batal" Width="100" Margin="0,12,0,0" IsCancel="True"/>
    </StackPanel>
  </Grid>
</Window>